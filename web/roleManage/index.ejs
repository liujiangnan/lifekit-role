<% include ../commonejs/common.ejs%>
<% include ../commonejs/alertModal.ejs%>

<style>
	.userTag{
		padding: 8px;
		margin-left: 5px;
		margin-right: 5px;
		position:relative; 
	}
  
	.line{
		border-bottom:solid 1px #ddd; 
		margin-top:40px; 
		position: relative;
	}

	.lineContainer{
		border-left:solid 1px #ddd;
		border-right:solid 1px #ddd;
		border-bottom:solid 1px #ddd;
		padding-top: 20px;
		height:270px;
		display: none;
		overflow: auto;
	}

	.lineTxt{
		position: absolute;
		top:-10px; 
		background: #ffffff;
		width:80px;
		margin-left: 30px;
		margin-right: 10px;
		font-weight: 700;
		cursor: pointer;
	}

	.userTd{
		width:100px;
		overflow:hidden; 
		text-overflow:ellipsis; 
		white-space:nowrap;
	}

</style>

<div id="cloneContaner" style="display:none;">
	<div class="label label-default userTag"> 
			<span>
				<span name="tagName"></span>
				<span name="delPic" class="glyphicon glyphicon-remove" style="margin-left:10px;"></span>
			</span> 
		</div>
</div>


<div class="container-fluid" style="padding-top:20px;">
	<div class="panel panel-default">
		<div class="panel-body" style="padding-top: 40px;">
			<form id="roleform" action="" class="form-horizontal" onSubmit="return false;">
				<input type="hidden" id="users" name="users" value="" />
				<div class="form-group">
					<label class="col-sm-2 control-label">角色名称:</label>
					<div class="col-sm-10">
						<input id="name" name="name" class="form-control" type="text" placeholder="请输入角色名称" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">描述:</label>
					<div class="col-sm-10">
						<textarea id="description" name="description" class="form-control" rows="3" placeholder="请输入描述"></textarea>
					</div>
				</div>
				<div class="line">
					<div id="choseUser" class="lineTxt" align="center">
						选择用户
						<span id="userPic" class="glyphicon glyphicon-plus" style="font-weight: 200"></span>
					</div>
				</div>
				<div id="userContainer" class="lineContainer">
					<% include userList.ejs %> 
				</div>
				<div class="line">
					<div id="choseEngine" class="lineTxt" align="center">
						选择模块
						<span id="enginePic" class="glyphicon glyphicon-plus" style="font-weight: 200"></span>
					</div>
				</div> 
				<div id="engineContainer" class="lineContainer">
					<% include engineList.ejs %> 
				</div>
				 
				<div class="form-group" style="padding-top: 20px;">
					<div class="text-center">
						<button id="saveRole" type="button" class="btn btn-default">保存</button>
						<button id="cancle" type="button" class="btn btn-default">取消</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<script type="text/javascript" src="/lifekit-role/web/roleManage/index.js"></script>